@model CreateBookVM

<div class="container" style="width:80%;display:flex;justify-content:flex-end;">
    <div class="row" style="width:90%">


        <form method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Title">
                <span asp-validation-for="Name" style="color:red;"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price" class="form-control" placeholder="Description">
                <span asp-validation-for="Price" style="color:red;"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <input asp-for="Description" class="form-control" placeholder="Description">
                <span asp-validation-for="Description" style="color:red;"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PageCount" class="form-label"></label>
                <input asp-for="PageCount" class="form-control" placeholder="Description">
                <span asp-validation-for="PageCount" style="color:red;"></span>
            </div>
            <div class="mb-3">
                <label asp-for="BookLanguage" class="form-label"></label>
                <input asp-for="BookLanguage" class="form-control" placeholder="Description">
                <span asp-validation-for="BookLanguage" style="color:red;"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Width" class="form-label"></label>
                <input asp-for="Width" class="form-control" placeholder="Opening Time">
                <span asp-validation-for="Width" style="color:red;"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Height" class="form-label"></label>
                <input asp-for="Height" class="form-control" placeholder="Closing Time">
                <span asp-validation-for="Height" style="color:red;"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Length" class="form-label"></label>
                <input asp-for="Length" class="form-control" placeholder="Venue">
                <span asp-validation-for="Length" style="color:red;"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Photo" class="form-label"></label>
                <input asp-for="Photo" class="form-control">
                <span asp-validation-for="Photo" style="color:red;"></span>
            </div>

            <h2>Genre of book</h2>
            <div class="btn-group" data-toggle="buttons">
                @foreach (var genre in ViewBag.Genres)
                {
                    <label class="btn btn-primary">
                        <input type="radio" name="genreId" value="@genre.Id"> @genre.Name
                    </label>
                    <br />

                }


            </div>
            <h2>Author/s of book</h2>
            <div class="btn-group" data-toggle="buttons">
                @foreach (var author in ViewBag.Author)
                {
                    <label class="btn btn-primary">
                        <input type="radio" name="authorId" value="@author.Id"> @author.Name
                    </label>
                    <br />

                }


            </div>
            <h2>Language of book</h2>
            <div class="btn-group" data-toggle="buttons">
                @foreach (var language in ViewBag.Languages)
                {
                    <label class="btn btn-primary">
                        <input type="radio" name="languageId" value="@language.Id"> @language.Name
                    </label>
                    <br />

                }


            </div>
            <br />
            <br />
            <button type="submit" class="btn btn-success">Submit</button>
            <a asp-controller="event" asp-action="index">Go Back</a>
        </form>




        </div>
        </div>
